{
  "name": "PingedIn",
  "description": "AI-powered LinkedIn extension for crafting smart replies, scheduling follow-ups, and generating personalized referrals.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://localhost:6060/*", 
    "https://pingedin.onrender.com/*", 
    "https://*.linkedin.com/*"
   ],

    "content_scripts": [
        {
        "js": ["content.js"],
        "css": ["content.css"],
        "run_at": "document_end",
        "matches": [
            "https://*.linkedin.com/*",
            "https://pingedin.onrender.com/*"
   
        ]
        }
    ],
    "web_accessible_resources": [
        {
        "resources": [],
        "matches": ["https://*.linkedin.com/*", "https://pingedin.onrender.com/*"]
        }
    ],


    "action": {
        "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
       },
       "default_title": "PingedIn.ai"
    }



  
}


